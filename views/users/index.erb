<h1>Users</h1>

<table>
  <tr>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Email</th>
    <th>Budget</th>
  </tr>
  <% for user in @users %>
  <tr>
    <td><a href="/users/<%=user.id %>"><%= user.first_name %></a></td>
    <td><a href="/users/<%=user.id %>"><%= user.last_name %></a></td>
    <td><a href="/users/<%=user.id %>"><%= user.email %></a></td>
    <td><a href="/users/<%=user.id %>"><%= user.budget %></a></td>
    <td>
      <form method="get" action="/users/<%= user.id %>/edit">
        <input type="submit" value="Update User" />
      </form>
    </td>
    <td>
      <form method="post" action="/users/<%= user.id %>/delete">
        <input type="submit" value="Delete User" />
      </form>
    </td>
  </tr>
  <% end %>
</table>
<form method="get" action="/users/new">
  <input type="submit" value="Create a New User" name="name">
</form>
