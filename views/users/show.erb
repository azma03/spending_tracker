<h1>User is</h1>

<table>
  <tr>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Email</th>
    <th>Budget</th>
  </tr>
  <tr>
    <td><%= @user.first_name %></td>
    <td><%= @user.last_name %></td>
    <td><%= @user.email %></td>
    <td><%= @user.budget %></td>
  </tr>
</table>

<form method="post" action="/users/<%= @user.id %>/delete">
  <input type="submit" value="Delete User" />
</form>

<form method="get" action="/users/<%= @user.id %>/edit">
  <input type="submit" value="Update User" />
</form>
