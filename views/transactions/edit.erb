<form method="post" action="/transactions/<%=@transaction.id %>">

  <label for="tag-select">Tag:</label>
  <select name="tag_id" id="tag-select" value= "<%= @transaction.get_tag().name %>">
    <% for tag in @tags %>
    <option value="<%=tag.id %>" <%= "selected" if tag.id == @transaction.tag_id %> ><%=tag.name %></option>
    <%end %>
  </select>

  <label for="merchant-select">Merchant:</label>
  <select name="merchant_id" id="merchant-select">
    <% for merchant in @merchants %>
    <option value="<%=merchant.id %>" <%= "selected" if merchant.id == @transaction.merchant_id %> ><%=merchant.name %></option>
    <%end %>
  </select>

  <label for="currency-select">Currency:</label>
  <select name="currency_id" id="currency-select">
    <% for currency in @currencies %>
    <option value="<%=currency.id %>" <%= "selected" if currency.id == @transaction.currency_id %> ><%=currency.short_name %></option>
    <%end %>
  </select>

  <label for="amount">Amount:</label>
  <input id="amount" type="text" name="amount" value= "<%= @transaction.amount %>" />

  <label for="timestamp">Date and Time (YYYY-MM-DD hh:min:sec):</label>
  <input id="trx-time" type="text" name="trx_time" value= "<%= @transaction.trx_time %>" />

  <input type="submit" value="Update Transaction" />
</form>
